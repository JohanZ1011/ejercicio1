<div class="container">
  
    <div class="row">
  
    <div class="col-12 col-md-8 col-lg-8">
        <table class="table table-bordered table-dark">
            <thead>
                <br>
                <br>
                <br>
              <h1>contacto</h1>
                <tr>
                 <th scope="col">ID</th>
                 <th scope="col">Nombre</th>
                 <th scope="col">Apellido</th>
                  <th scope="col">Telefono</th>
                 <th scope="col">Botones</th>
                </tr>
                
            </thead>
            <tbody>
                {{#each contacto}}
    <tr>
      <th scope="row">{{id_contacto}}</th>
      <td>{{nombre}}</td>
      <td>{{apellido}}</td> 
      <td>{{numero}}</td> 
      <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal{{id_contacto}}">
                        eliminar
                        </button>
                          <div class="modal fade" id="exampleModal{{id_contacto}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                <div class="modal-header">
                                    <h5 style="color:red" class="modal-title" id="exampleModalLabel">eliminar</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div style="color:blue;" class="modal-body">
                                    desea eliminar usuario {{contacto}}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">cerrar</button>
                                    <a href="/contacto/eliminar/{{id_contacto}}" class="btn btn-danger">eliminar</a>
                                </div>
                                </div>
                            </div>
                        </div>
                      

                             <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modificarusuario{{id_contacto}}">
                        modificar
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="modificarusuario{{id_contacto}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                <form method="POST" action="/contacto/modificar/{{id_contacto}}">
                                    <div class="modal-header">
                                        <h5 style="color:red" class="modal-title" id="exampleModalLabel">modificar</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div style="color:blue;" class="modal-body">
                                    

                                            <div class="form-group">
                                                <label for="exampleInputEmail1">nombre</label>
                                                <input type="text" value="{{nombre}}" class="form-control" name="nombre" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="nombre">
                                            </div>

                                            <div class="form-group">
                                                <label for="exampleInputEmail1">apellido</label>
                                                <input type="text" value="{{apellido}}" class="form-control" name="apellido" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="apellido">
                                            </div>

                                            <div class="form-group">
                                                <label for="exampleInputEmail1">telefono</label>
                                                <input type="text" value="{{telefono}}" class="form-control" name="telefono" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="telefono">
                                            </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">cerrar</button>
                                        <button type="submit" class="btn btn-primary">modificar</button>
                                    </div>
                                </form>
                                </div>
                            </div>
                        </div>
                        </td>
                        </td>
           
                    </tr>
                {{/each}}
            </tbody>
        </table>
        
    </div>
    
    <div class="col-12 col-md- col-lg-4">
        <form method="POST" action="/contacto/agregar">
<h1>contacto</h1>
            <div class="form-group">
                <label for="exampleInputEmail1">nombre</label>
                <input type="text" class="form-control" name="nombre" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="nombre">
            </div>

         <input type="hidden" class="form-control" name="id_contacto" id="exampleInputEmail1" aria-describedby="emailHelp">
 
             <div class="form-group">
                <label for="exampleInputEmail1">apellido</label>
                <input type="text" class="form-control" name="apellido" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="apellido">
            </div>
       
             <div class="form-group">
                <label for="exampleInputEmail1">telefono</label>
                <input type="text" class="form-control" name="telefono" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="telefono">
            </div>
         
            <button type="submit" class="btn btn-primary">Agregar</button>
        </form>
    </div>
        
</div>
